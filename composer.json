{
  "name": "curfle/framework",
  "type": "library",
  "description": "A lightweight, yet powerful PHP framework",
  "homepage": "https://github.com/curfle/framework",
  "license": "MIT",
  "authors": [
    {
      "name": "joon",
      "email": "info@joonlabs.com"
    }
  ],
  "keywords": [
    "curfle",
    "framework"
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpbench/phpbench": "^1.2"
  },
  "require": {
    "php": ">=8.0",
    "phpmailer/phpmailer": "^6.5",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "ext-mysqli": "*",
    "ext-sqlite3": "*",
    "ext-readline": "*",
    "ext-fileinfo": "*"
  },
  "autoload": {
    "files": [
      "src/Essence/helpers.php"
    ],
    "psr-4": {
      "Curfle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Curfle\\Tests\\": "tests/",
      "Curfle\\Benchmarks\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests"
  }
}
